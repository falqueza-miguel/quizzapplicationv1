<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <Button
        android:id="@+id/quiz_item_takebutton"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:text="take_quiz"
        app:layout_constraintTop_toBottomOf="@+id/quiz_item_descriptiontext"
        tools:layout_editor_absoluteX="13dp" />

    <ImageView
        android:id="@+id/quiz_item_quizimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quiz_item_placeholder" />

    <TextView
        android:id="@+id/quiz_item_titletext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="quiz_title"
        app:layout_constraintTop_toBottomOf="@+id/quiz_item_quizimage"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/quiz_item_descriptiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="quiz_description"
        app:layout_constraintTop_toBottomOf="@+id/quiz_item_titletext"
        tools:layout_editor_absoluteX="26dp" />
</androidx.constraintlayout.widget.ConstraintLayout>